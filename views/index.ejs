<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>QLD Journey Planner</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="stylesheets/style.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">QLD Journey Planner</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/qdzungpham/QLDJourneyPlanner">GitHub

                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- Page Content -->
    <div class="container">
        <div id="googlemaps"></div>
        <div class="row">
            <div class="col-md-4">
                <div id="floating-panel" class="card">
                    <div class="card-header">
                        <ul class="nav nav-pills card-header-pills">
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#options" role="tab">Options</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#directions" role="tab">Journey Planner</a>
                            </li>

                        </ul>
                    </div>
                    <div class="card-block">
                        <div class="tab-content">
                            <div class="tab-pane" id="options" role="tabpanel">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="trafficLayer" onclick="optionsHandler(this)" type="checkbox"
                                                class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Traffic layer</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="trafficCams" onclick="optionsHandler(this)" type="checkbox"
                                                class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Traffic cameras</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="hazards" onclick="optionsHandler(this)" type="checkbox" class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Hazards</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="crashes" onclick="optionsHandler(this)" type="checkbox" class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Crashes</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="congestion" onclick="optionsHandler(this)" type="checkbox" class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Congestion</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="roadworks" onclick="optionsHandler(this)" type="checkbox" class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Roadwords</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="specialEvents" onclick="optionsHandler(this)" type="checkbox"
                                                class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Special Events</span>
                                        </label>
                                    </li>
                                    <li class="list-group-item">
                                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                                            <input id="flooding" onclick="optionsHandler(this)" type="checkbox" class="custom-control-input">
                                            <span class="custom-control-indicator"></span>
                                            <span class="custom-control-description">Flooding</span>
                                        </label>
                                    </li>
                                </ul>
                            </div>
                            <div class="tab-pane" id="directions" role="tabpanel">
                                <div class="my-block">
                                    <div class="btn-group" data-toggle="buttons">
                                        <label class="btn btn-outline-secondary active">
                                            <input type="radio" name="options" id="BICYCLING" autocomplete="off"><i
                                                class="fa fa-bicycle" aria-hidden="true"></i>
                                        </label>
                                        <label class="btn btn-outline-secondary active">
                                            <input type="radio" name="options" id="DRIVING" autocomplete="off" checked><i
                                                class="fa fa-car" aria-hidden="true"></i>
                                        </label>
                                        <label class="btn btn-outline-secondary">
                                            <input type="radio" name="options" id="TRANSIT" autocomplete="off"><i class="fa fa-subway"
                                                aria-hidden="true"></i>
                                        </label>
                                    </div>
                                    <div class="input-group" style="margin-top: 5px">
                                        <span class="input-group-addon" id="basic-addon1">
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                                        </span>
                                        <input id="startPoint" type="text" class="form-control" placeholder="Enter a start point"
                                            aria-describedby="basic-addon1">
                                    </div>
                                    <div class="input-group" style="margin-top: 5px">
                                        <span class="input-group-addon" id="basic-addon1">
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                                        </span>
                                        <input id="destination" type="text" class="form-control" placeholder="Enter a destination"
                                            aria-describedby="basic-addon1">
                                    </div>

                                    <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0" style="margin-top: 5px">
                                        <input type="checkbox" class="custom-control-input" id="searchPlaces" onclick="searchPlaces()">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">Search for places along the route</span>
                                    </label>
                                    <div class="input-group">
                                        <input id="keyword" type="text" class="form-control" placeholder="Enter a keyword e.g. bars, restaurants"
                                            aria-describedby="basic-addon1" disabled>
                                    </div>
                                    <button onclick="findJourney()" type="button" class="btn btn-warning btn-sm btn-block"
                                        style="margin-top: 5px"><strong>Find Journey</strong></button>

                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div id="loader" class="loader"> </div>
                            <div id="infor" class="small text-muted">
                                Loading...
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->


    </div>
    <!-- /.container -->


